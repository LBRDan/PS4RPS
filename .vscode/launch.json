{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Desktop Debug",
      "preLaunchTask": "Desktp",
      "configurations": [
        "Desktop Attach",
        "Web Attach"
      ],
      "presentation": {
        "hidden": false,
        "group": "Desktp",
        "order": 1
      }
    }
  ],
  "configurations": [
    {
      "name": "Desktop Attach",
      "port": 9224,
      "request": "attach",
      "cwd": "${workspaceFolder}/packages/desktop",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 2
      }
    },
    {
      "name": "Web Attach",
      "port": 9223,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}/packages/web",
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 3
      }
    },
    {
      "name": "Web Debug By Chrome",
      "request": "launch",
      "preLaunchTask": "Web Dev",
      "type": "chrome",
      "url": "http://localhost:8831",
      "webRoot": "${workspaceFolder}/packages/web"
    },
  ]
}