{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Desktp",
      "dependsOrder": "sequence",
      "dependsOn": [
        "All Dev",
        "Desktop Start"
      ],
      "problemMatcher": []
    },
    {
      "label": "All Dev",
      "dependsOn": [
        "Desktop Dev",
        "Web Dev"
      ],
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "dev",
      "path": "packages/desktop/",
      "label": "Desktop Dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "No errors found"
          }
        },
      ]
    },
    {
      "type": "npm",
      "script": "dev",
      "path": "packages/web/",
      "label": "Web Dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Found 0 errors"
          }
        },
      ]
    },
    {
      "type": "npm",
      "script": "start",
      "path": "packages/desktop/",
      "label": "Desktop Start",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Debugger listening on",
            "endsPattern": "For help"
          }
        },
      ]
    }
  ]
}